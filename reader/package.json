{
  "name": "reader",
  "version": "1.0.0",
  "description": "",
  "main": "dist/server.js",
  "scripts": {
    "build:web": "esbuild web-src/main.ts --bundle --platform=browser --format=iife --target=es2020 --outfile=public/app.js",
    "build:server": "tsc -p tsconfig.server.json",
    "build": "pnpm run build:web && pnpm run build:server",
    "dev": "pnpm run build:web && tsx src/server.ts",
    "start": "pnpm run build && node dist/server.js",
    "typecheck": "tsc -p tsconfig.server.json --noEmit && tsc -p tsconfig.web.json --noEmit && tsc -p tsconfig.test.json --noEmit",
    "test": "tsx --test test/api-routes.test.ts test/frontend-domain.test.ts test/parser.test.ts test/url-normalize.test.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "cheerio": "^1.0.0",
    "express": "^5.2.1",
    "iconv-lite": "^0.7.2",
    "lru-cache": "^11.2.6"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/node": "^24.6.1",
    "@types/supertest": "^6.0.3",
    "esbuild": "^0.25.10",
    "supertest": "^7.1.4",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
